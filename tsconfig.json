{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"],
    "skipLibCheck": true,
    "types": ["vite/client","@vuepress/client/types"],
  },
  "include": ["./docs/.vuepress/**/*.ts", "./docs/.vuepress/**/*.vue"],
  "exclude": [".history", ".vscode"],
}
